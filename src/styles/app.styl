@import 'nib';
@import 'shared';

/* ------------------ */
/*   Primary styles   */
/* ------------------ */

* {
  box-sizing: border-box;
}

body {
  font-family: 'Open Sans', sans-serif;
  margin: 0;
  padding: 0;
  background: $background_color;
}

a {
  text-decoration: none;
}

ul {
  margin: 0;
  padding: 0;
}

img {
  display: block;
  max-width: 100%;
}

h1 {
  margin: 0;
}

.container {
  max-width: 980px;
  margin: auto;
}

.btn {
  line-height: 2.5em;
  display: inline-block;
  text-align: center;
  text-transform: uppercase;
  border: none;
  font-size: 16px;
  color: white;
  background-color: #d24551;
  margin: 0 .5em;
  width: 8em;
  cursor: pointer;

  &:hover {
    background-color: #942E37;
  }
}

input.btn {
  color: black;

  &:hover {
    background: #ebebeb;
  }
}

/* ------------------ */
/*       Header       */
/* ------------------ */

header {
  background: $header_background;
  padding: 1.0em 0 .6em;
  margin-bottom: 10em /*3.5em*/;
  text-align: center;

  a {
    display: inline-block;
    border-top: 1px solid $header_logo_border;
    border-bottom: 1px solid $header_logo_border;
    padding: .2em;
    outline-width: 0;
  }
}

@media only screen and (max-width: 980px) {
  header {
    margin-bottom: 8em;
  }
  .container {
    margin: 0 1em;
  }
}

/* ------------------ */
/*      Toolbar       */
/* ------------------ */

.toolbar {
  text-align: center;
  border-bottom: 1px solid #DADADA;
  padding: 2em;
}

/* ------------------ */
/*   One Row Layout   */
/* ------------------ */

.single .content {
  text-align: center;
}

/* ------------------ */
/*   Two Row Layout   */
/* ------------------ */

.top-row {
  background: $background_color;
  position: fixed;
  width: 100%;
  left: 0;
  top: 80px;
}

/* ------------------ */
/*    Photo Detail    */
/* ------------------ */

.photo {
  display: inline-block;
  max-width: 40%;
  background: white;
  border: 12px solid #fff;
  border-bottom-width: 42px;
  box-shadow: 10px 10px 35px #ccc;
  transform: rotate(3deg);

  .btn {
    margin-top: 30px;
    padding-left: 20px;
    padding-right: 20px;
    background: #E7E7E7;
    font-size: .8em;
    color: #a3a3a3;
    width: 11em;

    &:hover {
      background: #CECECE;
      color: #838383;
    }
  }
}

@media only screen and (max-width: 700px) {
  .photo {
    max-width: 80%;
  }
}

/* ------------------ */
/*   Photo Gallery    */
/* ------------------ */

.thumbnails {
  overflow: auto;
  margin-bottom: 2em;
  list-style-type: none;

  li {
    width: 25%;
    float: left;
    padding: 0 0.5em;
  }

  .thumbnail {
    display: block;
    padding: 4px;
    margin-bottom: 20px;
    border: 1px solid #ddd;
    border-radius: 4px;
    transition: all 0.2s ease-in-out;

    &:hover {
      border-color: #70425b;
    }
  }
}

@media only screen and (max-width: 980px) {
  .thumbnails {
    margin-bottom: 1em;
  }
}

@media only screen and (max-width: 700px) {
  .thumbnails li {
    width: 50%;
  }
}

@media only screen and (max-width: 420px) {
  .thumbnails li {
    width: 100%;
  }
}

/* ------------------ */
/*       Webcam       */
/* ------------------ */

.webcam {
  video {
    width: 100%;
    border: 2px solid #9E9E9E;
    margin-bottom: 2em;
    padding: 1em;
    box-sizing: border-box;
  }

  canvas {
    display: none;
  }
}

/* ------------------ */
/*    Photo Upload    */
/* ------------------ */

input[type='file'] {
  border: 1px solid #ddd;
  margin: auto;
  display: inherit;
  cursor: pointer;
  padding: 1em;
  background: #ebebeb;
  font-size: 16px;
  border-radius: 4px;
  transition: all 0.2s ease-in-out;
  line-height: 1;
  width: 50%;

  &:hover {
    border-color: #70425B;
  }
}

@media only screen and (max-width: 420px) {
  input[type='file'] {
    width: 90%;
  }
}
